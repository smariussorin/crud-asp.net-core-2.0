@using Admin.Views.AccountConf
@*@model IndexViewModel*@
@{
    ViewData["Title"] = "Cadastro de menu";
    ViewData.AddActivePage(AccountConfNav.Index);
}


@*@Html.Partial("_AccountConfNav", Model.StatusMessage)*@

<div class="row">


    <div class="col-md-12">

        <div class="col-lg-12">&nbsp;</div>

        <div class="col-md-4">
            <h4>@ViewData["Title"]</h4>
        </div>

        <div class="col-md-8">
            <button type="button" class="btn btn-dark"><a asp-action="Index">Voltar</a></button>
        </div>

        <div class="col-md-12">
            <hr />
        </div>


    </div>



    <div class="col-md-4">
        @Html.Partial("_AccountConfNav")
    </div>



    <div class="col-md-8">

        <form>
            <div class="form-group">
                <label for="exampleFormControlInput1">Nome menu</label>
                <input type="text" class="form-control">
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Local</label>
                <select class="form-control">
                    <option>Horizontal</option>
                    <option>Direita topo</option>
                    <option>Home</option>
                    <option>Rodapé</option>
                </select>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-dark">Salvar</button>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
